<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aicpextras="http://schemas.android.com/apk/res-auto"
    android:key="battery_styles"
    android:title="@string/status_bar_battery_title">

    <PreferenceCategory
        android:key="sb_battery_category"
        android:title="@string/sb_battery_category_title">

        <!-- SB Battery styles -->
        <com.aicp.gear.preference.SystemSettingListPreference
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:defaultValue="0" />

        <!-- SB Battery percent -->
        <com.aicp.gear.preference.SystemSettingListPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/status_bar_battery_percentage_title"
            android:entries="@array/status_bar_battery_percentage_entries"
            android:entryValues="@array/status_bar_battery_percentage_values"
            android:defaultValue="0" />

        <!-- SB Battery text charging -->
        <com.aicp.gear.preference.SystemSettingSwitchPreference
            android:key="status_bar_battery_text_charging"
            android:title="@string/status_bar_battery_text_charging_title"
            android:summary="@string/status_bar_battery_text_charging_summary"
            android:defaultValue="true" />

    </PreferenceCategory>
    <PreferenceCategory
        android:key="qs_battery_category"
        android:title="@string/qs_battery_category_title">

        <!-- QS Battery styles -->
        <com.aicp.gear.preference.SystemSettingListPreference
            android:key="qs_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:entries="@array/qs_battery_style_entries"
            android:entryValues="@array/qs_battery_style_values"
            android:defaultValue="-1" />

        <!-- QS Battery location -->
        <com.aicp.gear.preference.SystemSettingListPreference
            android:key="qs_battery_location"
            android:title="@string/qs_battery_location_title"
            android:entries="@array/qs_battery_location_entries"
            android:entryValues="@array/qs_battery_location_values"
            android:defaultValue="0" />

        <!-- QS Battery percent -->
        <com.aicp.gear.preference.SystemSettingListPreference
            android:key="qs_show_battery_percent"
            android:title="@string/status_bar_battery_percentage_title"
            android:entries="@array/status_bar_battery_percentage_entries"
            android:entryValues="@array/status_bar_battery_percentage_values"
            android:defaultValue="2" />

        <!-- Quick QS battery estimate -->
        <com.aicp.gear.preference.SystemSettingSwitchPreference
            android:key="qs_show_battery_estimate"
            android:title="@string/battery_estimates_title"
            android:summary="@string/battery_estimates_summary"
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>
