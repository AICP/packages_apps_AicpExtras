<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="ae_settings"
    android:title="@string/ae_settings_title">

    <com.aicp.gear.preference.SystemSettingIntListPreference
        android:key="ae_theme"
        android:title="@string/theme_title"
        android:entries="@array/theme_entries"
        android:entryValues="@array/theme_values"
        android:defaultValue="0" />

    <SwitchPreference
        android:key="ae_launcher_enabled"
        android:title="@string/ae_launcher_enabled_title"
        android:summary="@string/ae_launcher_enabled_summary"
        android:persistent="false" />

    <SwitchPreference
        android:key="show_device_hidden_prefs"
        android:title="@string/show_device_hidden_prefs_title"
        android:summary="@string/show_device_hidden_prefs_summary"
        android:defaultValue="false" />

</PreferenceScreen>
