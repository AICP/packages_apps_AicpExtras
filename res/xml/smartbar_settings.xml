<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aicpextras="http://schemas.android.com/apk/res-auto"
    android:key="smartbar_settings"
    android:title="@string/smartbar_interface" >

    <Preference
        android:key="smartbar_editor_mode"
        android:title="@string/smartbar_editor_title"
        android:summary="@string/smartbar_editor_summary" />

    <com.aicp.gear.preference.SecureSettingIntListPreference
        android:key="smartbar_context_menu_mode"
        android:title="@string/smartbar_context_menu_position_title"
        android:entries="@array/smartbar_context_menu_side_entries"
        android:entryValues="@array/smartbar_context_menu_side_values"
        android:defaultValue="0"
        android:summary="@string/smartbar_context_menu_position_summary" />

    <com.aicp.gear.preference.SecureSettingIntListPreference
        android:key="smartbar_ime_hint_mode"
        android:title="@string/smartbar_ime_action_title"
        android:entries="@array/smartbar_ime_action_entries"
        android:entryValues="@array/smartbar_ime_action_values"
        android:defaultValue="0"
        android:summary="@string/smartbar_ime_action_summary" />

    <com.aicp.gear.preference.SecureSettingIntListPreference
        android:key="smartbar_button_animation_style"
        android:title="@string/smartbar_button_animation_title"
        android:entries="@array/smartbar_button_animation_entries"
        android:entryValues="@array/smartbar_button_animation_values"
        android:defaultValue="0"
        android:summary="@string/smartbar_button_animation_summary" />

    <com.aicp.gear.preference.SecureSettingIntListPreference
        android:key="smartbar_longpress_delay"
        android:title="@string/smartbar_longpress_delay_title"
        android:entries="@array/smartbar_longpress_delay_entries"
        android:entryValues="@array/smartbar_longpress_delay_values"
        android:defaultValue="0"
        android:summary="@string/smartbar_longpress_delay_summary" />

    <com.aicp.gear.preference.SecureSettingSeekBarPreference
        android:key="navbar_buttons_alpha"
        android:title="@string/navbar_buttons_alpha_title"
        android:max="255"
        android:min="0"
        aicpextras:unitsLeft=""
        aicpextras:unitsRight=""
        android:defaultValue="255" />

    <com.aicp.gear.preference.SecureSettingSeekBarPreference
        android:key="smartbar_custom_icon_size"
        android:title="@string/smartbar_custom_icon_size_title"
        android:max="100"
        android:min="10"
        aicpextras:unitsLeft=""
        aicpextras:unitsRight="%"
        android:defaultValue="60" />

    <com.aicp.gear.preference.SecureSettingSwitchPreference
        android:key="smartbar_doubletap_sleep"
        android:title="@string/smartbar_double_tap_sleep_title"
        android:summary="@string/smartbar_double_tap_sleep_summary"
        android:defaultValue="false" />

    <!--<com.android.settings.preferences.SecureSettingSwitchPreference
        android:key="one_handed_mode_ui"
        android:title="@string/one_handed_mode_title"
        android:summary="@string/one_handed_mode_summary"
        android:defaultValue="false" />-->

</PreferenceScreen>
