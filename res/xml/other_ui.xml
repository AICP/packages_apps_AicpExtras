<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aicpextras="http://schemas.android.com/apk/res/com.aicp.extras"
    android:title="@string/other_ui_title">

    <com.aicp.extras.preference.SystemSettingIntListPreference
        android:key="system_ui_theme"
        android:entries="@array/systemui_theme_style_entries"
        android:entryValues="@array/systemui_theme_style_values"
        android:title="@string/systemui_theme_style_title"
        android:summary="@string/systemui_theme_style_summary"
        android:defaultValue="0" />

    <com.aicp.extras.preference.SystemSettingSeekBarPreference
        android:key="volume_dialog_timeout"
        android:title="@string/volume_dialog_timeout_title"
        android:min="500"
        android:max="10000"
        android:defaultValue="3000"
        aicpextras:interval="100"
        aicpextras:unitsLeft=""
        aicpextras:unitsRight="ms" />

    <!-- Screenshot tone -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="screenshot_sound"
        android:title="@string/screenshot_sound_title"
        android:summary="@string/screenshot_sound_summary"
        android:defaultValue="true" />

    <!-- Three-Finger Swipe to Screenshot -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="three_finger_gesture"
        android:title="@string/three_finger_gesture"
        android:summary="@string/three_finger_gesture_summary"
        android:defaultValue="false" />

    <!-- Accidental touch -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="anbi_enabled"
        android:title="@string/anbi_enabled_title"
        android:summary="@string/anbi_enabled_summary"
        android:defaultValue="false" />

    <!-- Volume keys control media stream -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="volume_keys_control_media_stream"
        android:title="@string/volume_keys_control_media_stream_title"
        android:summary="@string/volume_keys_control_media_stream_summary"
        android:defaultValue="false" />

    <!-- Volume keys control music playback -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="volume_button_music_control"
        android:title="@string/volume_rocker_music_controls_title"
        android:summary="@string/volume_rocker_music_controls_summary"
        android:defaultValue="false" />

    <!-- Launch music player when headset is connected -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="headset_connect_player"
        android:title="@string/headset_connect_player_title"
        android:summary="@string/headset_connect_player_summary"
        android:defaultValue="false" />

    <!-- Show CPU Info overlay -->
    <SwitchPreference
        android:key="show_cpu_info"
        android:title="@string/show_cpu_info"
        android:summary="@string/show_cpu_info_summary"
        android:defaultValue="false" />

    <!-- Toast icon switch -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="toast_icon"
        android:title="@string/toast_icon_title"
        android:summary="@string/toast_icon_summary"
        android:defaultValue="true" />

    <!-- Vibrate on plug -->
    <com.aicp.extras.preference.SystemSettingSwitchPreference
        android:key="vibration_on_charge_state_changed"
        android:title="@string/vibration_on_charge_state_changed_title"
        android:defaultValue="false" />

    <com.aicp.extras.preference.SystemSettingColorPickerPreference
        android:key="status_bar_battery_saver_color"
        android:title="@string/status_bar_battery_saver_color_title"
        android:summary="@string/status_bar_battery_saver_color_summary"
        android:defaultValue="0xfff4511e" /> <!-- deep orange 600 -->

     <!-- Scrolling cache -->
     <ListPreference
        android:key="pref_scrollingcache"
        android:dialogTitle="@string/pref_scrollingcache_title"
        android:title="@string/pref_scrollingcache_title"
        android:summary="@string/pref_scrollingcache_summary"
        android:entries="@array/entries_scrollingcache"
        android:entryValues="@array/values_scrollingcache" />
</PreferenceScreen>
