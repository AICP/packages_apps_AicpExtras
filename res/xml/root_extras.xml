<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="system_app_remover"
        android:title="@string/system_app_remover" />

    <!-- Custom bootanim -->
    <PreferenceCategory
        android:title="@string/custom_bootanimation_title">

        <Preference
            android:key="custom_bootanimation"
            android:title="@string/custom_bootanimation_select_title"
            android:summary="@string/custom_bootanimation_summary" />

    </PreferenceCategory>

    <!-- SELinux -->
    <PreferenceCategory
        android:title="@string/selinux_switch_title">

        <Preference
            android:key="selinux_switch"
            android:summary="@string/selinux_switch_summary"
            android:selectable="false"/>

        <SwitchPreference
            android:key="selinux"
            android:title="@string/selinux_title"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="selinux_persistence"
            android:title="@string/selinux_persistence_title"
            android:summary="@string/selinux_persistence_summary"
            android:defaultValue="true" />
    </PreferenceCategory>

</PreferenceScreen>
