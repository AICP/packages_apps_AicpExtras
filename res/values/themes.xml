<resources>

    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="color_settings_icon">?android:attr/colorControlNormal</item>
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="switchBarTheme">@style/ThemeOverlay.SwitchBar.Settings</item>
        <!-- SeekBarPreference popup view: match default toast style -->
        <item name="value_popup_view_bg">#e6eeeeee</item>
        <item name="value_popup_view_fg">@*android:color/primary_text_default_material_light</item>
        <item name="color_two_target_preference_divider">?android:attr/dividerVertical</item>
        <item name="footerPreferenceStyle">@style/Preference.FooterPreference.SettingsBase</item>
        <!-- For AndroidX AlertDialog -->
        <item name="alertDialogTheme">@style/Theme.AlertDialog</item>
    </style>

    <style name="AppTheme_MoreAccent" parent="@style/AppTheme">
        <item name="color_settings_icon">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme_LessAccent" parent="@style/AppTheme">
        <item name="switchBarTheme">@style/ThemeOverlay.SwitchBar.Settings.LessAccent</item>
    </style>

    <style name="ChangelogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent_auto</item>
        <item name="changelog_color_bg">?android:attr/colorBackground</item>
        <item name="changelog_color_header_back">?attr/colorBackgroundFloating</item>
        <item name="changelog_color_commit_message">?android:attr/textColorPrimary</item>
        <item name="changelog_color_commit_bg">#eeeeee</item>
        <!-- Changelog image behind status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- White navbar -->
        <item name="android:navigationBarDividerColor">#1f000000</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- DUI -->
    <style name="Theme.SmartBar.Dialog" parent="@*android:style/Theme.DeviceDefault.Light.Dialog.Alert" />

</resources>
